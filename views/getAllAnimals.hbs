<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Get all animals</title>
  </head>
  <body>
    {{#each data.message}}
    <div>Id: {{id}}</div>
    <div>Type: {{type}}</div>
    <div>Name: {{name}}</div>
    <div>Age: {{age}}</div>
    <a href="http://localhost:3000/animals/{{id}}">View</a>
    <br><br>
    {{/each}}
    <form action="http://localhost:3000/animals" method="POST">
      <p>
        <label>Name</label>
        <input type="text" name="name">
      </p>
      <p>
        <label>Type</label>
        <input type="text" name="type">
      </p>
      <p>
        <label>Age</label>
        <input type="number" name="age">
      </p>
      <p>
        <label>Owner's Id</label>
        <input type="text" name="ownerId">
      </p>
      <p>
        <button>
          Add new animal
        </button>
      </p>
    </form>
    <a href="http://localhost:3000">To main page</a>
  </body>
</html>