<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <title>Get all users</title>
  </head>
  <body>
    {{#each data.message}}
    <div>Id: {{id}}</div>
    <div>Name: {{name}}</div>
    <div>Surname: {{surname}}</div>
    <div>Age: {{age}}</div>
    <a href="http://localhost:3000/users/{{id}}">View</a>
    <br><br>
    {{/each}}
    <form action="http://localhost:3000/users" method="POST">
      <p>
        <label>Name</label>
        <input type="text" name="name">
      </p>
      <p>
        <label>Surname</label>
        <input type="text" name="surname">
      </p>
            <p>
        <label>Age</label>
        <input type="number" name="age">
      </p>
      <p>
        <button>
          Add new user
        </button>
      </p>
    </form>
    <a href="http://localhost:3000">To main page</a>
  </body>
</html>